[*.cs]
# Prefer file-scoped namespaces (C# 10+)
csharp_style_namespace_declarations = file_scoped:error
# IDE0005: Remove unnecessary imports (using directives)
dotnet_diagnostic.IDE0005.severity = error

# IDE0130: Namespace does not match folder structure
dotnet_diagnostic.IDE0130.severity = error

# Enforces a blank line before control flow keywords like return
csharp_style_allow_blank_line_after_colon_in_constructor_initializer = true:error

# Prefer primary constructors when possible (C# 12+)
csharp_style_prefer_primary_constructors = true:error